#!/usr/bin/env python

import sys
import urllib
import codecs

from html2rest import html2rest

fileobj = None
if sys.argv[1:]:
    arg = sys.argv[1]
    if arg.startswith('http://'):
        fileobj = urllib.urlopen(arg)
    else:
        fileobj = codecs.open(arg, 'rb', 'utf8')
else:
    fileobj = sys.stdin
try:
    html2rest(fileobj.read())
finally:
    try:
        fileobj.close()
    except:
        pass

